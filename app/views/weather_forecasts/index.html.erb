<div class="page-header">
  <h1>
    Weather forecasts
    <a href="/weather_forecasts/new" class="btn btn-lg btn-success">New Weather forecast</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Temperature f</th>
        <th>Forecast</th>
        <th>State</th>
        <th>City</th>
        <th>Actions</th>
      </tr>

      <% @weather_forecasts.each do |weather_forecast| %>
      <tr>
        <td><%= weather_forecast.temperature_f %></td>
        <td><%= weather_forecast.forecast %></td>
        <td><%= weather_forecast.state %></td>
        <td><%= weather_forecast.city %></td>
        <td>
          <a href="/weather_forecasts/<%= weather_forecast.id %>" class="btn btn-primary">Show</a>
          <a href="/weather_forecasts/<%= weather_forecast.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_weather_forecast/<%= weather_forecast.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
